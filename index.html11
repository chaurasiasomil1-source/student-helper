<script>
function showClass(classNum) {
  let info = "";

  if (classNum === "8") {
    info = "Focus on basics. Maths & Science are key.";
  } else if (classNum === "9") {
    info = "Build strong concepts. Start regular revision.";
  } else if (classNum === "10") {
    info = "Board year! Practice previous papers seriously.";
  } else if (classNum === "11") {
    info = "Concept-heavy year. Understand, don‚Äôt memorize.";
  } else if (classNum === "12") {
    info = "Critical year. Balance boards + competitive prep.";
  }

  document.getElementById("classInfo").innerText = info;
}

</script>
</body>
</html>